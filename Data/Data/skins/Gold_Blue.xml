<?xml version="1.0" encoding="utf-8"?>

<skin name="Blue &amp; Gold">
  <property name="ButtonBrush">
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
      <LinearGradientBrush.GradientStops>
        <GradientStop Color="#FFFFD700" Offset="0.1" />
        <GradientStop Color="#FFFFFF00" Offset="0.95" />
        <GradientStop Color="#FFFFD700" Offset="1" />
      </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
  </property>
  <property name="HeaderBackgroundBrush2">
    <SolidColorBrush xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">#324D6A</SolidColorBrush>
  </property>
  <property name="HeaderBackgroundBrush">
    <SolidColorBrush xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">#FFFFD700</SolidColorBrush>
  </property>
  <property name="BackgroundImage">
    <BitmapImage BaseUri="{x:Null}" UriSource="Data/skins/background.jpg"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" />
  </property>
  <property name="BackgroundTop">
    <SolidColorBrush Color="#FFFFD700" Opacity="0.6" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
  </property>
  <property name="BackgroundBottom">
    <SolidColorBrush Color="#FFFFD700" Opacity="0.6" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
  </property>
  <property name="TextColor">
    <SolidColorBrush xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">#000000</SolidColorBrush>
  </property>
  <property name="HeaderTextColor">
    <SolidColorBrush xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">#FFD800</SolidColorBrush>
  </property>
</skin>