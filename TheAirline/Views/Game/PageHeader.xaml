<UserControl x:Class="TheAirline.Views.Game.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheAirline.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <WrapPanel>
        <Image Source="/Resources/images/logo_banner.png" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Margin="0 0 20 0" VerticalAlignment="Center" Opacity="2" Height="32" />
        <TextBlock Text="The Airline Project" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Image Source="/Resources/images/logo_banner.png" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Margin="20 0 0 0" VerticalAlignment="Center" Opacity="2" Height="32" />
    </WrapPanel>
</UserControl>
