    <!--town templates-->
    <DataTemplate x:Key="TownItem">
        <WrapPanel>
            <TextBlock Text="{Binding Name}" VerticalAlignment="Bottom" />
            <TextBlock
                Text="{Binding State.ShortName,TargetNullValue={x:Static sys:String.Empty},StringFormat='{}, {0}'}"
                VerticalAlignment="Bottom" />
            <Image Source="{Binding State.Flag}" Margin="5 0 0 0" Height="20" Width="20"
                   RenderOptions.BitmapScalingMode="HighQuality">
                <Image.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding State}" Value="{x:Null}">
                                <Setter Property="Image.Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <ContentControl Content="{Binding Country,Converter={StaticResource CountryCurrentCountryConverter}}"
                            VerticalAlignment="Bottom">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <DockPanel>

                            <TextBlock Text="{Binding Name,StringFormat='{}, {0}'}" VerticalAlignment="Bottom" />
                            <Image Source="{Binding Flag}" Width="20" Height="20" Margin="5 0 0 0"
                                   VerticalAlignment="Bottom" RenderOptions.BitmapScalingMode="HighQuality" />
                        </DockPanel>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </WrapPanel>
    </DataTemplate>
    <!--airliner templates-->
    <DataTemplate x:Key="FleetAirlinerLink">
        <TextBlock VerticalAlignment="Bottom">
            <TextBlock.ToolTip>
