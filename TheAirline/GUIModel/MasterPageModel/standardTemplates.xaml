    <Style TargetType="WrapPanel" x:Key="WrapPanelStyle">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="Black" Opacity="0.2" />
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="0 2 0 2" />
