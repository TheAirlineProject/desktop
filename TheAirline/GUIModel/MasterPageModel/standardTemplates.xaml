                           Text="{Binding Airliner,Converter={StaticResource AirlinerClassCodeConverter}}" />
            </TextBlock.ToolTip>
            <Hyperlink Tag="{Binding}" Click="lnkAirliner_Click">
                <Run Text="{Binding Name}" />
            </Hyperlink>
        </TextBlock>
    </DataTemplate>
    <DataTemplate x:Key="AirlinerCodeItem">
