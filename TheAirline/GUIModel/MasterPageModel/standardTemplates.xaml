    <!--countries templates-->
    <DataTemplate x:Key="CountryFlagLongBoldItem">
        <DockPanel>
            <Image Source="{Binding Flag}" Width="20" VerticalAlignment="Bottom"
                   RenderOptions.BitmapScalingMode="HighQuality" />
            <TextBlock Text="{Binding Name}" Margin="5 0 0 0" TextAlignment="Left" FontWeight="Bold"
                       VerticalAlignment="Bottom" />
        </DockPanel>
    </DataTemplate>
