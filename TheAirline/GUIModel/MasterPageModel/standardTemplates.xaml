    <DataTemplate x:Key="CountryFlagItem">
        <ContentControl Content="{Binding Converter={StaticResource CountryCurrentCountryConverter}}"
                        VerticalAlignment="Bottom">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <DockPanel>
                        <Image Source="{Binding Flag}" Width="20" Height="20" VerticalAlignment="Bottom"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Text="{Binding ShortName}" Margin="5 0 0 0" TextAlignment="Left" Width="30"
                                   VerticalAlignment="Bottom" />
                    </DockPanel>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </DataTemplate>
    <DataTemplate x:Key="CountryLongFlagItem">
        <ContentControl Content="{Binding Converter={StaticResource CountryCurrentCountryConverter}}"
