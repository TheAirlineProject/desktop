<window:PopUpWindow x:Class="TheAirline.GUIModel.CustomControlsModel.PopUpWindowsModel.PopUpSeatConfiguration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:window="clr-namespace:TheAirline.GraphicsModel.UserControlModel.PopUpWindowsModel"
                    xmlns:s="clr-namespace:Seatplanner;assembly=Seatplanner"
                    x:Name="popUpSeatConfiguration"
        Title="{Binding Text,ElementName=popUpSeatConfiguration}" Height="600" Width="400" WindowStartupLocation="CenterScreen" Background="#004A7F">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <s:ucAirlinerSeats SeatSize="25" AirlinerModel="{Binding Airliner,ElementName=popUpSeatConfiguration}" Margin="0 5 0 0">
        </s:ucAirlinerSeats>
    </ScrollViewer>
</window:PopUpWindow>
