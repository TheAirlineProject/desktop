<Page x:Class="TheAirline.GUIModel.PagesModel.AirlinersPageModel.PageNewAirliners"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:filter="clr-namespace:TheAirline.GUIModel.CustomControlsModel.FilterableListView"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Name="pageNewAirliners"
      Title="PageNewAirliners">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <!--
            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                <TextBlock Text="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageUsedAirliners 1003'}" VerticalAlignment="Bottom" FontWeight="Bold" Width="150"></TextBlock>
                <CheckBox Style="{StaticResource ImageCheckBoxStyle}"  VerticalAlignment="Bottom" Name="cbPossibleHomebase" Checked="cbPossibleHomebase_Checked" Unchecked="cbPossibleHomebase_Unchecked" ></CheckBox>
            </WrapPanel>
            -->
        </StackPanel>
        <filter:FilterableListView x:Name="lvAirliners" Grid.Row="1"
                                   ItemsSource="{Binding AllTypes, ElementName=pageNewAirliners}"
                                   ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                   FilterButtonActiveStyle="{StaticResource filterButtonActive}"
                                   FilterButtonInactiveStyle="{StaticResource filterButtonInactive}"
                                   Background="Transparent">

            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource ColumnHeaderStyle}">
                    <filter:SortableGridViewColumn Header="" CanFilter="False">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox VerticalAlignment="Bottom" IsChecked="{Binding IsSelected}"
                                          Checked="cbCompare_Checked" Unchecked="cbCompare_Unchecked" Tag="{Binding}">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxNormalStyle}">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="IsEnabled" Value="True" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageManufacturer 1000'}"
                        CanFilter="True" SortPropertyName="Type.AirlinerFamily" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Bottom" Margin="5 0 0 0" Text="{Binding Type.Name,Mode=OneTime}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageUsedAirliners 1000'}"
                        CanFilter="True" SortPropertyName="Type.Manufacturer.Name" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <Image Source="{Binding Type.Manufacturer.Logo,Mode=OneTime}" Visibility="Collapsed"
                                           VerticalAlignment="Bottom" RenderOptions.BitmapScalingMode="HighQuality"
                                           Width="20" />
                                    <TextBlock Text="{Binding Type.Manufacturer.Name,Mode=OneTime}" VerticalAlignment="Bottom"
                                               Margin="5 0 0 0" />
                                </WrapPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageManufacturer 1001'}"
                        CanFilter="True" SortPropertyName="Type.TypeAirliner" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Type.TypeAirliner,Mode=OneTime}" VerticalAlignment="Bottom" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>

                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageManufacturer 1002'}"
                        CanFilter="True" FilterValues="{Binding RangeRanges,ElementName=pageNewAirliners}"
                        SortPropertyName="Type.Range" Width="125">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Type.Range,Mode=OneTime,Converter={StaticResource DistanceToUnitConverter}}"
                                    VerticalAlignment="Bottom" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageManufacturer 1003'}"
                        CanFilter="True" FilterValues="{Binding SpeedRanges,ElementName=pageNewAirliners}"
                        SortPropertyName="Type.CruisingSpeed" Width="125">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Type.CruisingSpeed,Mode=OneTime,Converter={StaticResource SpeedToUnitConverter}}"
                                    VerticalAlignment="Bottom" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageManufacturer 1004'}"
                        CanFilter="True" FilterValues="{Binding RunwayRanges,ElementName=pageNewAirliners}"
                        SortPropertyName="Type.MinRunwaylength" Width="125">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Type.MinRunwaylength,Mode=OneTime,Converter={StaticResource SmallDistanceToUnitConverter}}"
                                    VerticalAlignment="Bottom" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageManufacturer 1005'}"
                        CanFilter="False" SortPropertyName="Type.FuelConsumption" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Type.FuelConsumption,Mode=OneTime,Converter={StaticResource FuelConsumptionConverter}}"
                                    VerticalAlignment="Bottom" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>

                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageUsedAirliners 1004'}"
                        CanFilter="True" FilterValues="{Binding CapacityRanges,ElementName=pageNewAirliners}"
                        SortPropertyName="Type.MaxSeatingCapacity" Width="125">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Type.MaxSeatingCapacity,Mode=OneTime,StringFormat={}{0} pax}"
                                               VerticalAlignment="Bottom">
                                        <TextBlock.Style>
                                            <Style>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type.TypeAirliner,Mode=OneTime}" Value="Cargo">
                                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                        Text="{Binding Type.CargoSize,Mode=OneTime,Converter={StaticResource CargoSizeConverter}}"
                                        VerticalAlignment="Bottom">
                                        <TextBlock.Style>
                                            <Style>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type.TypeAirliner,Mode=OneTime}"
                                                                 Value="Passenger">
                                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                    <filter:SortableGridViewColumn
                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageManufacturer 1007'}"
                        CanFilter="False" SortPropertyName="Type.Price" Width="125">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Type.Price,Mode=OneTime,Converter={StaticResource ValueCurrencyConverter}}"
                                    VerticalAlignment="Bottom" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </filter:SortableGridViewColumn>
                </GridView>
            </ListView.View>
        </filter:FilterableListView>
        <WrapPanel Grid.Row="2" Margin="0 5 0 0">
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="btnOrder_Click"
                    Content="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageNewAirliners 200'}">
                <Button.Style>
                    <Style BasedOn="{StaticResource StandardButtonStyle}" TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedAirliners.Count,ElementName=pageNewAirliners}"
                                         Value="0">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </WrapPanel>
    </Grid>
</Page>