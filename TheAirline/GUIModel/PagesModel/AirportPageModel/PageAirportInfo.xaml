<Page x:Class="TheAirline.GUIModel.PagesModel.AirportPageModel.PageAirportInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
      xmlns:local="clr-namespace:TheAirline.GUIModel.PagesModel.AirportPageModel"
      Name="pageAirportInfo"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageAirportInfo">
    <Page.Resources>
        <local:WeatherImageConverter x:Key="WeatherImageConverter" />
        <local:ContractYearlyPaymentConverter x:Key="ContractYearlyPaymentConverter" />
        <local:TemperatureToTextConverter x:Key="TemperatureToTextConverter" />
        <local:WindSpeedToUnitConverter x:Key="WindSpeedToUnitConverter" />
        <local:TerminalPriceConverter x:Key="TerminalPriceConverter" />
        <DataTemplate x:Key="RunwayItem">
            <WrapPanel />
        </DataTemplate>

        <DataTemplate x:Key="WeatherItem">
            <WrapPanel>
                <TextBlock
                    Text="{Binding Date,Mode=OneTime,StringFormat=D,ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}"
                    VerticalAlignment="Bottom" Width="150" />
                <Image Source="{Binding Converter={StaticResource WeatherImageConverter}}"
                       RenderOptions.BitmapScalingMode="HighQuality" Height="16" VerticalAlignment="Bottom" />
                <TextBlock Text="{Binding TemperatureHigh,Mode=OneTime,Converter={StaticResource TemperatureToTextConverter}}"
                           FontWeight="Bold" VerticalAlignment="Bottom" Width="50" Margin="20 0 0 0"
                           TextAlignment="Right" />
                <TextBlock Text="{Binding TemperatureLow,Mode=OneTime,Converter={StaticResource TemperatureToTextConverter}}"
                           FontWeight="Light" VerticalAlignment="Bottom" Width="50" TextAlignment="Right" />
            </WrapPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <!--           <ColumnDefinition Width="*" />-->
        </Grid.ColumnDefinitions>
        <Border Style="{StaticResource RoundedBorderStyle}" Grid.Column="0" Margin="0 0 5 0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock
                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1000'}"
                        Style="{StaticResource SmallHeaderStyle}" VerticalAlignment="Bottom" />
                    <TextBlock VerticalAlignment="Bottom" FontWeight="Bold" FontSize="18" 
                               Text="{Binding Airport.Profile.Name,Mode=OneTime}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                       
                      
                        <StackPanel Margin="5 0 0 0" Grid.Column="1">
                            <Image Source="{Binding Airport.Profile.Logo,Mode=OneTime}" Height="300" Width="500" HorizontalAlignment="Stretch" RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Style>
                                    <Style>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Airport.Profile.Logo,Mode=OneTime}"
                                                                 Value="{x:Null}">
                                                <Setter Property="Image.Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Airport.Profile.Logo.Length,Mode=OneTime}"
                                                                 Value="0">
                                                <Setter Property="Image.Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1001'}"
                                    Width="100" VerticalAlignment="Bottom" FontWeight="Bold" />
                                <TextBlock VerticalAlignment="Bottom">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} / {1}" Mode="OneTime">
                                            <Binding Path="Airport.Profile.IATACode" />
                                            <Binding Path="Airport.Profile.ICAOCode" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1002'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <ContentControl Content="{Binding Airport.Profile.Town,Mode=OneTime}"
                                                ContentTemplate="{StaticResource TownItem}" VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1003'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding Airport.Profile.Period.From,Mode=OneTime,StringFormat=d,ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>

                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1004'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock Text="{Binding Airport.Profile.TimeZone.DisplayName,Mode=OneTime}"
                                           VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1041'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock Text="{Binding Airport.Profile.Pax,Mode=OneTime}" VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style BasedOn="{StaticResource WrapPanelStyle}" TargetType="WrapPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowLocalTime,Mode=OneTime}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1040'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding LocalTime,Mode=OneTime,ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1005'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding Airport.Profile.Size,Mode=OneTime,Converter={StaticResource TextUnderscoreConverter}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1006'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding Airport.Profile.Cargo,Mode=OneTime,Converter={StaticResource TextUnderscoreConverter}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1037'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding Type,Converter={StaticResource TextUnderscoreConverter}}"
                                    VerticalAlignment="Bottom" />
                                <Button Background="Transparent" Width="20" Tag="{Binding}" Margin="10 0 0 0"
                                                        Click="btnCustoms_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="International">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Image Source="/data/images/customs.png"
                                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                </Button>
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1038'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding Airport.Profile.Season,Mode=OneTime,Converter={StaticResource TextUnderscoreConverter}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1047'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding LandingFee,Mode=OneTime,Converter={StaticResource ValueCurrencyConverter}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1048'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="100" />
                                <TextBlock
                                    Text="{Binding FuelPrice,Mode=OneTime,Converter={StaticResource ValueCurrencyConverter}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                        </StackPanel>
                    </Grid>
                    <TextBlock
                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1017'}"
                        VerticalAlignment="Bottom" Margin="0 10 0 0" Style="{StaticResource SmallHeaderStyle}" />
                    <ListView VerticalAlignment="Stretch" Background="Transparent" BorderThickness="0"
                              ItemsSource="{Binding Airport.Runways,Mode=OneTime}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1018'}"
                                    Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name,Mode=OneTime}" VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1019'}"
                                    Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Length,Mode=OneTime,Converter={StaticResource SmallDistanceToUnitConverter}}"
                                                VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1020'}"
                                    Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Surface,Mode=OneTime,Converter={StaticResource TextUnderscoreConverter}}"
                                                VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1056'}"
                                    Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Type,Mode=OneTime}"
                                                VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                      
                            
                        </ListView.View>
                    </ListView>
                    <StackPanel Margin=" 0 10 0 0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentWeather,Mode=OneTime}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock
                            Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1034'}"
                            VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}" />
                        <WrapPanel>
                            <Image Width="48" VerticalAlignment="Bottom" RenderOptions.BitmapScalingMode="HighQuality"
                                   Source="{Binding CurrentWeather,Converter={StaticResource WeatherImageConverter}}" />
                            <TextBlock
                                Text="{Binding CurrentWeather.Temperature,Mode=OneTime,Converter={StaticResource TemperatureToTextConverter}}"
                                FontWeight="Bold" VerticalAlignment="Bottom" FontSize="24" />
                            <StackPanel Margin="25 0 0 0" VerticalAlignment="Center">
                                <WrapPanel>
                                    <TextBlock
                                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1035'}"
                                        VerticalAlignment="Bottom" Width="50" FontWeight="Bold" />
                                    <TextBlock
                                        Text="{Binding CurrentWeather.Cover,Mode=OneTime,Converter={StaticResource TextUnderscoreConverter}}"
                                        VerticalAlignment="Bottom">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentWeather.HasPrecip,Mode=OneTime}"
                                                                 Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                        Text="{Binding CurrentWeather.Precip,Mode=OneTime,Converter={StaticResource TextUnderscoreConverter}}"
                                        VerticalAlignment="Bottom">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentWeather.HasPrecip,Mode=OneTime}"
                                                                 Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </WrapPanel>
                                <WrapPanel>
                                    <TextBlock
                                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1036'}"
                                        VerticalAlignment="Bottom" Width="50" FontWeight="Bold" />
                                    <TextBlock
                                        Text="{Binding CurrentWeather.WindSpeed,Mode=OneTime,Converter={StaticResource WindSpeedToUnitConverter}}"
                                        VerticalAlignment="Bottom" />
                                    <TextBlock
                                        Text="{Binding CurrentWeather.Direction,Mode=OneTime,Converter={StaticResource TextUnderscoreConverter}}"
                                        Margin="5 0 0 0" VerticalAlignment="Bottom" />
                                </WrapPanel>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                    <TextBlock
                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1007'}"
                        Margin="0 10 0 0" VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}" />
                    <ListBox Background="Transparent" BorderThickness="0"
                             ItemContainerStyleSelector="{StaticResource ListBoxItemStyleSelector}"
                             ItemTemplate="{DynamicResource WeatherItem}" ItemsSource="{Binding Weather}" />

                </StackPanel>
            </ScrollViewer>

        </Border>
        <Border Style="{StaticResource RoundedBorderStyle}" Grid.Column="1" Margin="5 0 5 0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock
                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1054'}"
                        VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}"/>
                    <WrapPanel Style="{StaticResource WrapPanelStyle}">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"
                                                           Source="/data/images/passenger.png" Height="24" VerticalAlignment="Bottom" />
                        <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1052'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="150" Margin="10 0 0 0" />
                        <TextBlock Text="{Binding FreePaxGates}" VerticalAlignment="Bottom"></TextBlock>
                        <TextBlock Text="{Binding TotalPaxGates,StringFormat='{} / {0}'}" VerticalAlignment="Bottom"></TextBlock>
                    </WrapPanel>
                    <WrapPanel Style="{StaticResource WrapPanelStyle}">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"
                                                           Source="/data/images/cargo.png" Height="24" VerticalAlignment="Bottom"/>
                        <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1053'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="150" Margin="10 0 0 0" />
                        <TextBlock Text="{Binding FreeCargoGates}" VerticalAlignment="Bottom"></TextBlock>
                        <TextBlock Text="{Binding TotalCargoGates,StringFormat='{} / {0}'}" VerticalAlignment="Bottom"></TextBlock>

                    </WrapPanel>
                    <TextBlock
                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1008'}"
                        VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}" Margin="0 5 0 0" />
                    <ListView VerticalAlignment="Stretch" Background="Transparent" BorderThickness="0"
                              ItemsSource="{Binding Terminals}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1009'}"
                                    Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name,Mode=OneTime}" VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1010'}"
                                    Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Airline.Profile.Name,Mode=OneTime,FallbackValue='Airport'}"
                                                       VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1011'}"
                                    Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Bottom">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}/{1}">
                                                        <Binding Path="FreeGates" />
                                                        <Binding Path="Gates" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1049'}"
                                    Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <WrapPanel>
                                                <Image RenderOptions.BitmapScalingMode="HighQuality"
                                                           Source="/data/images/passenger.png" Height="24" VerticalAlignment="Bottom" >
                                                    <Image.Style>
                                                        <Style>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Terminal.Type,Mode=OneTime}" Value="Cargo">
                                                                    <Setter Property="Image.Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                                <Image RenderOptions.BitmapScalingMode="HighQuality"
                                                           Source="/data/images/cargo.png" Height="24" VerticalAlignment="Bottom">
                                                    <Image.Style>
                                                        <Style>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Terminal.Type,Mode=OneTime}" Value="Passenger">
                                                                    <Setter Property="Image.Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                               
                                            </WrapPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <WrapPanel>
                                                <Button Background="Transparent" VerticalAlignment="Bottom" Width="20"
                                                        Click="btnBuyTerminal_Click" Tag="{Binding}"
                                                        Visibility="{Binding IsBuyable,Converter={StaticResource BooleanToVisibility}}">
                                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                                           Source="/data/images/buy.png" />
                                                </Button>
                                                <Button Background="Transparent" VerticalAlignment="Bottom" Width="20"
                                                        Click="btnSellTerminal_Click" Tag="{Binding}"
                                                        Visibility="{Binding IsSellable,Converter={StaticResource BooleanToVisibility}}">
                                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                                           Source="/data/images/delete.png" />
                                                </Button>
                                            </WrapPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BuildingTerminals.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock
                            Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1043'}"
                            VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}" />
                        <ListView VerticalAlignment="Stretch" Background="Transparent" BorderThickness="0"
                                  ItemsSource="{Binding BuildingTerminals}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn
                                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1009'}"
                                        Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name,Mode=OneTime}" VerticalAlignment="Bottom" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn
                                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1010'}"
                                        Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Text="{Binding Airline.Profile.Name,Mode=OneTime,FallbackValue='Airport'}"
                                                    VerticalAlignment="Bottom" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn
                                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1045'}"
                                        Width="75">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Bottom" Text="{Binding Gates,Mode=OneTime}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn
                                        Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1044'}"
                                        Width="75">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Text="{Binding DeliveryDate,StringFormat=d,Mode=OneTime,ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}"
                                                    VerticalAlignment="Bottom" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                    <Expander Margin="0 5 0 0"
                              Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1012'}"
                              Style="{StaticResource ExpanderStyle}">
                        <StackPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1013'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="150" />
                                <TextBox Width="200" Name="txtName" Text="Terminal X" UndoLimit="10">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="Terminal X">
                                                    <Setter Property="FontStyle" Value="Italic" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1014'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="150" />
                                <Slider Name="slGates" Minimum="1" Maximum="50" TickFrequency="1" Width="100"
                                        IsSnapToTickEnabled="True" />
                                <TextBlock Text="{Binding Value,ElementName=slGates}" VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1015'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="150" />
                                <TextBlock
                                    Text="{Binding TerminalPrice,Converter={StaticResource ValueCurrencyConverter}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1016'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="150" />
                                <TextBlock
                                    Text="{Binding TerminalGatePrice,Converter={StaticResource ValueCurrencyConverter}}"
                                    VerticalAlignment="Bottom" />
                            </WrapPanel>
                            <WrapPanel Style="{StaticResource WrapPanelStyle}">
                                <TextBlock
                                    Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirportInfo 1039'}"
                                    VerticalAlignment="Bottom" FontWeight="Bold" Width="150" />
                                <TextBlock VerticalAlignment="Bottom">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource TerminalPriceConverter}">
                                            <Binding Path="Value" ElementName="slGates" />
                                            <Binding Path="Airport" />
                                        </MultiBinding>
                                    </TextBlock.Text>
