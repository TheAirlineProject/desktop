<Page x:Class="TheAirline.GUIModel.PagesModel.PilotsPageModel.PageFlightSchools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:util="clr-namespace:TheAirline.GUIModel.HelpersModel"
      xmlns:filter="clr-namespace:TheAirline.GUIModel.CustomControlsModel.FilterableListView"
      Name="pageFlightSchools"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageFlightSchools">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource RoundedBorderStyle}" Grid.Column="0" Margin="5 5 5 5">
                <StackPanel>
                    <TextBlock
                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1007'}"
                        Style="{StaticResource SmallHeaderStyle}" />
                    <filter:FilterableListView x:Name="lvInstructors"
                                               ItemsSource="{Binding AllInstructors,ElementName=pageFlightSchools}"
                                               ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                               FilterButtonActiveStyle="{StaticResource filterButtonActive}"
                                               FilterButtonInactiveStyle="{StaticResource filterButtonInactive}"
                                               Background="Transparent">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource ColumnHeaderStyle}">
                                <filter:SortableGridViewColumn CanFilter="False" Width="32">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Width="20" VerticalAlignment="Bottom" Click="btnHire_Click"
                                                    Background="Transparent" Tag="{Binding}">
                                                <Image Source="/data/images/money.png"
                                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger
                                                                Binding="{Binding ElementName=lvFlightSchools, Path=Items.Count}"
                                                                Value="0">
                                                                <Setter Property="Button.Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn CanFilter="False"
                                                               Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1000'}"
                                                               Width="200" SortPropertyName="Profile.Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Bottom" Text="{Binding Profile.Name}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn CanFilter="False"
                                                               Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1001'}"
                                                               Width="50" SortPropertyName="Profile.Age">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Bottom" Text="{Binding Profile.Age}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn CanFilter="True"
                                                               Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1002'}"
                                                               Width="100" SortPropertyName="Rating.Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Bottom" Text="{Binding Rating.Name}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn CanFilter="False"
                                                               Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1003'}"
                                                               Width="200" SortPropertyName="Profile.Town.Country.Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ContentControl Content="{Binding Profile.Town.Country}"
                                                            VerticalAlignment="Bottom"
                                                            ContentTemplate="{StaticResource CountryLongFlagItem}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                            </GridView>
                        </ListView.View>
                    </filter:FilterableListView>

                </StackPanel>
            </Border>
            <Border Style="{StaticResource RoundedBorderStyle}" Grid.Column="1" Margin="5 5 5 5">
                <StackPanel>
                    <TextBlock
                        Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1008'}"
                        Style="{StaticResource SmallHeaderStyle}" />
                    <ListView x:Name="lvFlightSchools" VerticalAlignment="Stretch" util:GridViewSort.AutoSort="True"
                              Background="Transparent" BorderThickness="0"
                              ItemsSource="{Binding FlightSchools,ElementName=pageFlightSchools}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="" Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button VerticalAlignment="Bottom" Tag="{Binding}" Background="Transparent"
                                                    Click="btnDelete_Click">
                                                <Image Source="/Data/images/delete.png" Height="16" Width="16"
                                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1000'}"
                                    Width="200" util:GridViewSort.PropertyName="Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Bottom">
                                                <Hyperlink Tag="{Binding}" Click="lnkFlightSchool_Click">
                                                    <Run Text="{Binding Name}" />
                                                </Hyperlink>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1004'}"
                                    Width="200" util:GridViewSort.PropertyName="Airport.Profile.Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ContentControl Content="{Binding Airport}"
                                                            ContentTemplate="{StaticResource AirportCountryItem}"
                                                            VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1005'}"
                                    Width="100" util:GridViewSort.PropertyName="NumberOfInstructors"
                                    DisplayMemberBinding="{Binding NumberOfInstructors}" />
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 1006'}"
                                    Width="100" util:GridViewSort.PropertyName="NumberOfStudents"
                                    DisplayMemberBinding="{Binding NumberOfStudents}" />

                            </GridView>
                        </ListView.View>
                    </ListView>
                    <WrapPanel Margin="0 10 0 0">
                        <Button Click="btnBuild_Click" Style="{StaticResource StandardButtonStyle}"
                                Content="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageFlightSchools 200'}" />
                    </WrapPanel>
                </StackPanel>
            </Border>
        </Grid>

    </ScrollViewer>
</Page>