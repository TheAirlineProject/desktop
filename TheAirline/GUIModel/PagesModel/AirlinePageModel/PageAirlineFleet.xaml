<Page x:Class="TheAirline.GUIModel.PagesModel.AirlinePageModel.PageAirlineFleet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:filter="clr-namespace:TheAirline.GUIModel.CustomControlsModel.FilterableListView"
      xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
      xmlns:util="clr-namespace:TheAirline.GUIModel.HelpersModel"
         xmlns:local="clr-namespace:TheAirline.GUIModel.PagesModel.AirlinePageModel"

      Name="pageAirlineFleet"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageAirlineFleet">
    <Page.Resources>
        <local:AirlinerToSubsidiaryConverter x:Key="airlinerToSubsidiaryConverter"></local:AirlinerToSubsidiaryConverter>
        <local:AirlinerCallBackConverter x:Key="airlinerCallBackConverter"></local:AirlinerCallBackConverter>
    </Page.Resources>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Style="{StaticResource RoundedBorderStyle}" Grid.Column="0" Margin="0 0 5 0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}"
                               Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1000'}" />
                    <filter:FilterableListView BorderThickness="0"
                                               ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                               ItemsSource="{Binding DeliveredFleet}"
                                               FilterButtonActiveStyle="{StaticResource filterButtonActive}"
                                               FilterButtonInactiveStyle="{StaticResource filterButtonInactive}"
                                               Background="Transparent">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource ColumnHeaderStyle}">
                                <filter:SortableGridViewColumn Header="" CanFilter="False" SortPropertyName="Name"
                                                               Width="32">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox VerticalAlignment="Bottom" Checked="cbAirliner_Checked"
                                                      Tag="{Binding}" Unchecked="cbAirliner_Unchecked">
                                                <CheckBox.Style>
                                                    <Style BasedOn="{StaticResource CheckBoxNormalStyle}"
                                                           TargetType="CheckBox">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Airliner.Airline.IsHuman,Mode=OneTime}"
                                                                         Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Airliner.Type.TypeAirliner,Mode=OneTime}"
                                                                         Value="Cargo">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Airliner.Type.TypeAirliner,Mode=OneTime}"
                                                                         Value="Mixed">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>

                                                        </Style.Triggers>
                                                    </Style>
                                                </CheckBox.Style>
                                            </CheckBox>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn Header="" CanFilter="False" SortPropertyName="Name"
                                                               Width="32">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Click="btnSellAirliner_Click" Background="Transparent"
                                                    Tag="{Binding}" Width="20" VerticalAlignment="Bottom">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Airliner.Airline.IsHuman,Mode=OneTime}"
                                                                         Value="False">
                                                                <Setter Property="Button.Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <Image Source="/data/images/delete.png"
                                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn Header="" CanFilter="False" SortPropertyName="Name"
                                                               Width="32">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Click="btnMoveAirliner_Click" Background="Transparent"
                                                    Tag="{Binding}" Width="20" VerticalAlignment="Bottom">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Converter={StaticResource airlinerToSubsidiaryConverter},Mode=OneTime}"
                                                                         Value="False">
                                                                <Setter Property="Button.Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <Image Source="/data/images/moveairliner.png"
                                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1002'}"
                                    CanFilter="False" SortPropertyName="Name" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ContentControl Content="{Binding}" VerticalAlignment="Bottom"
                                                            ContentTemplate="{StaticResource FleetAirlinerLink}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1003'}"
                                    CanFilter="True" SortPropertyName="Airliner.Type.Name" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <WrapPanel>
                                                <Image Source="{Binding Airliner.Type.Manufacturer.Logo,Mode=OneTime}"
                                                       VerticalAlignment="Bottom"
                                                       RenderOptions.BitmapScalingMode="HighQuality" Width="20" />
                                                <TextBlock Margin="5 0 0 0" Text="{Binding Airliner.Type.Name,Mode=OneTime}"
                                                           VerticalAlignment="Bottom" />
                                            </WrapPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1004'}"
                                    CanFilter="False" SortPropertyName="Airliner.Routes" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ListBox ItemsSource="{Binding Routes,Mode=OneTime}" BorderThickness="0"
                                                     Style="{StaticResource VerticalListBoxStyle}"
                                                     VerticalAlignment="Bottom">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <ContentControl Content="{Binding Mode=OneTime}"
                                                                        ContentTemplate="{StaticResource RouteFlagItem}"
                                                                        VerticalAlignment="Bottom" />
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1007'}"
                                    CanFilter="True" SortPropertyName="Purchased" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Purchased,Mode=OneTime}" VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1014'}"
                                    CanFilter="False" SortPropertyName="Airliner.Type.CockpitCrew" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Airliner.Type.CockpitCrew,Mode=OneTime}"
                                                       VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1015'}"
                                    CanFilter="False" SortPropertyName="Pilots.Count" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Pilots.Count,Mode=OneTime}" VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                            </GridView>
                        </ListView.View>
                    </filter:FilterableListView>
                    <WrapPanel Margin="0 5 0 0">
                    <Button Click="btnEditAirliners_Click"
                            Content="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 200'}"
                            HorizontalAlignment="Left">
                        <Button.Style>
                            <Style BasedOn="{StaticResource StandardButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding SelectedAirliners.Count,ElementName=pageAirlineFleet}"
                                        Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Click="btnBuyAirliners_Click"
                            Content="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 202'}"
                            HorizontalAlignment="Left" Margin="5 0 0 0">
                        <Button.Style>
                            <Style BasedOn="{StaticResource StandardButtonStyle}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsBuyable,ElementName=pageAirlineFleet}"
                                        Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    </WrapPanel>

                    <TextBlock VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}"
                               Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1006'}"
                               Margin="0 10 0 0" />
                    <filter:FilterableListView BorderThickness="0"
                                               ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                               ItemsSource="{Binding OrderedFleet}"
                                               FilterButtonActiveStyle="{StaticResource filterButtonActive}"
                                               FilterButtonInactiveStyle="{StaticResource filterButtonInactive}"
                                               Background="Transparent">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource ColumnHeaderStyle}">
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1002'}"
                                    CanFilter="False" SortPropertyName="Name" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name,Mode=OneTime}" VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1003'}"
                                    CanFilter="True" SortPropertyName="Airliner.Type.Name" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <WrapPanel>
                                                <Image Source="{Binding Airliner.Type.Manufacturer.Logo,Mode=OneTime}"
                                                       VerticalAlignment="Bottom"
                                                       RenderOptions.BitmapScalingMode="HighQuality" Width="20" />
                                                <TextBlock Margin="5 0 0 0" Text="{Binding Airliner.Type.Name,Mode=OneTime}"
                                                           VerticalAlignment="Bottom" />
                                            </WrapPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                                <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1005'}"
                                    CanFilter="False" SortPropertyName="Airliner.BuiltDate" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Airliner.BuiltDate,StringFormat=d,ConverterCulture={x:Static gl:CultureInfo.CurrentCulture},Mode=OneTime}"
                                                VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </filter:SortableGridViewColumn>
                            </GridView>
                        </ListView.View>
                    </filter:FilterableListView>
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger
                                                Binding="{Binding OutleasedFleet.Count}"
                                                Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}"
                               Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1017'}"
                               Margin="0 10 0 0" />
                        <filter:FilterableListView BorderThickness="0"
                                               ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                               ItemsSource="{Binding OutleasedFleet}"
                                               FilterButtonActiveStyle="{StaticResource filterButtonActive}"
                                               FilterButtonInactiveStyle="{StaticResource filterButtonInactive}"
                                               Background="Transparent">
                            <ListView.View>
                                <GridView ColumnHeaderContainerStyle="{StaticResource ColumnHeaderStyle}">
                                    <filter:SortableGridViewColumn Header="" CanFilter="False" SortPropertyName="Name"
                                                               Width="32">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="btnCallBackAirliner_Click" Background="Transparent"
                                                    Tag="{Binding}" Width="20" VerticalAlignment="Bottom">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Converter={StaticResource airlinerCallBackConverter}}"
                                                                         Value="False">
                                                                    <Setter Property="Button.Visibility" Value="Collapsed" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Image Source="/data/images/moveairliner.png"
                                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </filter:SortableGridViewColumn>
                                    <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1002'}"
                                    CanFilter="False" SortPropertyName="Name" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name,Mode=OneTime}" VerticalAlignment="Bottom" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </filter:SortableGridViewColumn>
                                    <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1003'}"
                                    CanFilter="True" SortPropertyName="Airliner.Type.Name" Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <WrapPanel>
                                                    <Image Source="{Binding Airliner.Type.Manufacturer.Logo,Mode=OneTime}"
                                                       VerticalAlignment="Bottom"
                                                       RenderOptions.BitmapScalingMode="HighQuality" Width="20" />
                                                    <TextBlock Margin="5 0 0 0" Text="{Binding Airliner.Type.Name,Mode=OneTime}"
                                                           VerticalAlignment="Bottom" />
                                                </WrapPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </filter:SortableGridViewColumn>
                                    <filter:SortableGridViewColumn
                                    Header="{Binding Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1005'}"
                                    CanFilter="False" SortPropertyName="Airliner.BuiltDate" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                Text="{Binding Airliner.BuiltDate,StringFormat=d,ConverterCulture={x:Static gl:CultureInfo.CurrentCulture},Mode=OneTime}"
                                                VerticalAlignment="Bottom" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </filter:SortableGridViewColumn>
                                </GridView>
                            </ListView.View>
                        </filter:FilterableListView>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Border Style="{StaticResource RoundedBorderStyle}" Grid.Column="1" Margin="5 0 0 0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}"
                               Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1001'}" />
                    <ListView VerticalAlignment="Stretch" util:GridViewSort.AutoSort="True" BorderThickness="0"
                              Background="Transparent" ItemsSource="{Binding Routes}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineInfo 1014'}"
                                    Width="100" util:GridViewSort.PropertyName="Route.Destination1.Profile.Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <ContentControl Content="{Binding Route,Mode=OneTime}" VerticalAlignment="Bottom"
                                                            ContentTemplate="{StaticResource RouteItem}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineInfo 1015'}"
                                    Width="100" util:GridViewSort.PropertyName="Route.Type">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Route.Type,Mode=OneTime}" VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineInfo 1032'}"
                                    Width="100" util:GridViewSort.PropertyName="PriceIndex">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding PriceIndex,Mode=OneTime,Converter={StaticResource ValueCurrencyConverter}}"
                                                VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineInfo 1016'}"
                                    Width="100" util:GridViewSort.PropertyName="Route.Balance">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Route.Balance,Converter={StaticResource ValueCurrencyConverter},Mode=OneTime}"
                                                Foreground="{Binding Route.Balance,Converter={StaticResource ValueIsMinusConverter},Mode=OneTime}"
                                                VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Header="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineInfo 1017'}"
                                    Width="75" util:GridViewSort.PropertyName="Route.FillingDegree">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Route.FillingDegree,StringFormat={}{0:0.00 %},Mode=OneTime}"
                                                       VerticalAlignment="Bottom" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Margin="0 5 0 0" Style="{StaticResource StandardButtonStyle}" HorizontalAlignment="Left"
                            Click="btnRouteMap_Click"
                            Content="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 201'}" />

                    <TextBlock VerticalAlignment="Bottom" Style="{StaticResource SmallHeaderStyle}"
                               Text="{Binding Source={x:Null}, Converter={StaticResource TranslatorConverter},ConverterParameter='PageAirlineFleet 1013'}"
                               Margin="0 10 0 0 " />
                    <ListBox ItemsSource="{Binding Cooperations}" Background="Transparent" BorderThickness="0"
                             ItemContainerStyleSelector="{StaticResource ListBoxItemStyleSelector}"
                             VerticalAlignment="Bottom">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <ContentControl Content="{Binding Airport,Mode=OneTime}"
                                                    ContentTemplate="{StaticResource AirportCountryLink}"
                                                    VerticalAlignment="Bottom" Width="250" />
                                    <TextBlock Text="{Binding Cooperation.Type.Name,Mode=OneTime}" VerticalAlignment="Bottom" />
                                </WrapPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>